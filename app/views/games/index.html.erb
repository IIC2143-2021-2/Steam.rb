<h1>Games</h1>

<%= notice %>
<% if current_user %>
    <%= link_to ' Ver Perfil ', users_show_path(current_user.id)%>
<% end %>

<table align='center'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Rating</th>
            <th>Description</th>
            <th>Price (Dolars)</th>
            <th>Category</th>
            <th>Usuario</th>
            <th colspan='3'></th>
        </tr>
    </thead>
    <tbody>
        <% @games.each do |game| %>
            <tr>
                <td><%= game.name %></td>
                <td><%= game.rating %></td>
                <td><%= game.description %></td>
                <td><%= game.price %></td>
                <td><%= game.category %></td>
                <td><%= game.user.username %></td>
                <td><%= link_to 'View details', games_show_path(:id => game.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Upload a new game', games_new_path %>
