<h1>Edit your game</h1>

<% if user_signed_in?%>
<%if @game.user_id == current_user.id%>
<%= form_with(model: @game, method: :patch, url: games_update_path(:id => @game.id)) do |form| %>
    <div>
        <%= form.label :Name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :Rating %>
        <%= form.number_field :rating %>
    </div>

    <div>
        <%= form.label :Description %>
        <%= form.text_field :description %>
    </div>

    <div>
        <%= form.label :Price %>
        <%= form.number_field :price %>
    </div>

    <div>
        <%= form.label :Category %>
        <%= form.text_field :category %>
    </div>


    <div>
        <%= form.label :user_id %>
        <%= form.number_field :user_id, id: :user_id,  value:current_user.id,  type: "hidden"%>
    </div>
    <div>
        <%= form.submit 'Edit game' %>
    </div>

<% end %>
