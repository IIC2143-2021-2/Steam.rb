<h1>
    <%= @game.name %>
</h1>

<p>
    <strong>Rating: </strong>
    <%= @game.rating %>
</p>

<p>
    <strong>Description: </strong>
    <%= @game.description %>
</p>

<p>
    <strong>Price: </strong>
    <%= @game.price %>
</p>

<p>
    <strong>Category: </strong>
    <%= @game.category %>
</p>

<p>
    <strong>Creator </strong>
    <%= @game.user.username %>
</p>


<p>

<table class="table">
    <thead>
        <tr>
            <th>Characters of the game</th>
            <th>Characters creator</th>
        <tr>
    <thead>
    <tbody>
        <% @game.characters.each do |character|%>
            <tr>
                <td><%= character.name%></td>
                <td><%= character.user.username%></td>
            <tr>
        <%end%>
    </tbody>
</table>

</p>

<%= link_to 'Go back', games_index_path %>
<% if user_signed_in? and current_user.id == @game.user_id%>
<%= link_to 'Edit game', games_edit_path(:id => @game.id) %>
<%= link_to 'Delete game', games_delete_path(:id => @game.id), method: :delete %>
<%end%>
