<h1>Upload a new character</h1>

        <% if user_signed_in? %>
<%= form_with(model: @character, method: :post) do |form| %>

    <div>
        <%= form.label :Name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :speed %>
        <%= form.number_field :speed %>
    </div>

    <div>
        <%= form.label :attack %>
        <%= form.number_field :attack %>
    </div>

    <div>
        <%= form.label :defense %>
        <%= form.number_field :defense %>
    </div>

    <div>
        <%= form.label :user_id %>
        <%= form.number_field :user_id, id: :user_id,  value:current_user.id,  type: "hidden"%>
    </div>
    

    <div>
        <%= form.submit 'Create character' %>
    </div>

<% end %>
